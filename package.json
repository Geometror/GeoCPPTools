{
	"name": "geocpptools",
	"displayName": "GeoCPPTools",
	"publisher": "Geometror",
	"description": "-",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:geocpptools.createCPPClass",
		"onLanguage:cpp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "geocpptools.createCPPClass",
				"title": "Create C++ class"
			}
		],
		"keybindings": [
			{
				"command": "geocpptools.createCPPClass",
				"key": "alt+x"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "geocpptools.createCPPClass",
					"group": "cpp@1",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"configuration": {
			"title": "GeoCPPTools",
			"properties": {
				"geocpptools.includeHelper.watcherExtensions": {
					"type": "array",
					"default": [
						"cpp",
						"hpp",
						"c",
						"h",
						"cc",
						"cxx",
						"c++",
						"C"
					],
					"description": "File extensions, which are watched/observed"
				},
				"geocpptools.includeHelper.excludedFolders": {
					"type": "array",
					"default": [
						"lib",
						"libs",
						"build",
						"out",
						".vscode",
						".git",
						"tool",
						"tools"
					],
					"description": "Excluded folders"
				},
				"geocpptools.includeHelper.sourceFolder": {
					"type": "string",
					"default": "src",
					"description": "The name of the projects source folder"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
